extends lib/layout.jade

block head
  meta(name="robots", content="noindex")

block content
  each post in posts
    article
      header.page-header
        .meta
          span.glyphicon.glyphicon-calendar.icon
          time.time(datetime=post.datetime, pubdate)!= post.date
          span.glyphicon.glyphicon-tag.icon
          each category in post.categories
            span.category
              a(href="/categories/"+category)!= category
      h1.entry-title
        a(href="/posts/"+post._id)!= post.title
      .entry-content!= post.intro
      footer
        a.btn.btn-default(href="/posts/"+post._id)
          |Read More &rarr;
        include lib/ad

  ul.pager
    if prev
      li.previous
        a(href=prev)
          |&larr; Older

    if next
      li.next
        a(href=next)
          |Newer &rarr;
